<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSplashScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/llSplashScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/armalite"
            android:text="@string/txt_tvPText1"
            android:textAlignment="center"
            android:textColor="@color/textColor_Whiite"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/ivLOGO"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/tvPText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/armalite"
            android:text="@string/txt_tvPText2"
            android:textAlignment="center"
            android:textColor="@color/textColor_Whiite"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>